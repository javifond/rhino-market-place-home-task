{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/node_modules/**",
      "**/.next/**",
      "**/dist/**",
      "**/coverage/**",
      "**/.turbo/**",
      "**/playwright-report/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "error",
        "noConstantCondition": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noConsoleLog": "warn",
        "noDoubleEquals": "error",
        "noDuplicateObjectKeys": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error",
        "useTemplate": "error",
        "noUnusedTemplateLiteral": "error",
        "useImportType": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": { "maxAllowedComplexity": 12 }
        }
      },
      "performance": {
        "noBarrelFile": "warn",
        "noReExportAll": "warn"
      },
      "a11y": {
        "useButtonType": "error",
        "useAltText": "error",
        "noBlankTarget": "error",
        "useKeyWithClickEvents": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    },
    "globals": ["React"]
  },
  "overrides": [
    {
      "include": ["**/*.test.tsx", "**/*.test.ts", "**/*.spec.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsoleLog": "off",
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "include": ["**/next.config.ts", "**/jest.config.ts", "**/playwright.config.ts"],
      "linter": {
        "rules": {
          "style": { "useImportType": "off" }
        }
      }
    }
  ]
}
